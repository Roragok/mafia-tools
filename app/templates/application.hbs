
<div class="mafia-tool container-fluid">

  <h1 class="display-1 text-center">Mafia Team Generator</h1>

  <div class="row">
    <div class="col-sm-6 col-12">
      <h2>List of Players</h2>
      <hr/>
      {{textarea value=signed_players placeholder="List of Player Names" rows="6"}}
      <small>Enter a list of players.  One player per line.</small>
    </div>

    <div class="col-sm-6 col-12">
      <h2>List of Roles</h2>
      <hr/>
      {{textarea value=role_list placeholder="List of Roles" rows="6"}}
      <small>Enter a list of roles.  One role per line.</small>
    </div>

    <div class="col-12">
      {{#if buildTeam}}

        <div class="row">
          <div class="col-6">
            <h2> Player </h2>
            {{ players }}
          </div>

          <div class="col-6">
          <h2> Role </h2>
          {{ role }}
          </div>
        </div>

        <button class="btn btn-default" {{action "generateTeams" signed_players role_list}}>Re-Generate Teams</button>

      {{else}}

        <button class="btn btn-default" {{action "generateTeams" signed_players role_list}}>Generate Teams</button>
        
      {{/if}}
    </div>
  </div>
</div>

{{outlet}}
